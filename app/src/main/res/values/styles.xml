<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteEditText" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="ItemText" parent="android:Widget.TextView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/violet</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textSize">32sp</item>
        <item name="android:fontStyle">italic</item>
    </style>

</resources>